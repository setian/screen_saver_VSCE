{
  "name": "coding-screensaver",
  "displayName": "Coding Screen Saver",
  "description": "An immersive, animated screensaver for VS Code that simulates live coding by fetching real code snippets from GitHub.",
  "version": "1.1.0",
  "publisher": "Nahceskrap",
  "icon": "media/icons/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/setian/screen_saver_VSCE.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "screenSaver.test",
        "title": "Screen Saver: Test"
      },
      {
        "command": "screenSaver.configureRepositories",
        "title": "Screen Saver: Select Repositories"
      }
    ],
    "configuration": {
      "title": "Coding Screen Saver",
      "properties": {
        "screenSaver.idleTimeSeconds": {
          "type": "number",
          "default": 300,
          "description": "The number of seconds of inactivity before the screen saver starts. Minimum value is 5 seconds.",
          "minimum": 5
        },
        "screenSaver.typingSpeed": {
          "type": "number",
          "default": 40,
          "minimum": 1,
          "maximum": 200,
          "description": "Typing speed in milliseconds per character while rendering code."
        },
        "screenSaver.repositories.enabled": {
          "type": "array",
          "markdownDescription": "Repositories the screen saver may fetch snippets from. Use the command `Screen Saver: Select Repositories` for a checkbox picker.",
          "items": {
            "type": "string",
            "enum": [
              "theAlgorithmsPython",
              "theAlgorithmsJavaScript",
              "theAlgorithmsJava",
              "theAlgorithmsC",
              "theAlgorithmsCpp",
              "theAlgorithmsGo",
              "theAlgorithmsRust",
              "theAlgorithmsKotlin",
              "thirtySecondsOfCode",
              "oneLoc",
              "helloWorld",
              "javascriptQuestions",
              "wtfjs",
              "wtfpython",
              "thirtySecondsOfInterviews",
              "awesomeProgrammingQuotes",
              "programmingMemes"
            ],
            "enumDescriptions": [
              "TheAlgorithms · Python",
              "TheAlgorithms · JavaScript",
              "TheAlgorithms · Java",
              "TheAlgorithms · C",
              "TheAlgorithms · C++",
              "TheAlgorithms · Go",
              "TheAlgorithms · Rust",
              "TheAlgorithms · Kotlin",
              "30 Seconds of Code",
              "1loc",
              "leachim6 · hello-world",
              "LydiaHallie · JavaScript Questions",
              "denysdovhan · wtfjs",
              "satwikkansal · wtfpython",
              "30 Seconds of Interviews",
              "awesome-programming-quotes",
              "programming-memes"
            ]
          },
          "default": [
            "theAlgorithmsPython",
            "theAlgorithmsJavaScript",
            "theAlgorithmsJava",
            "theAlgorithmsC",
            "theAlgorithmsCpp",
            "theAlgorithmsGo",
            "theAlgorithmsRust",
            "theAlgorithmsKotlin",
            "thirtySecondsOfCode",
            "oneLoc",
            "helloWorld",
            "javascriptQuestions",
            "wtfjs",
            "wtfpython",
            "thirtySecondsOfInterviews",
            "awesomeProgrammingQuotes",
            "programmingMemes"
          ],
          "uniqueItems": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3"
  }
}
